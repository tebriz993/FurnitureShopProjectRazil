@model FurnitureShopProjectRazil.Areas.Admin.ViewModels.UserViewModel
@{
    ViewData["Title"] = $"İstifadəçi: {Model.UserName}";
    string defaultProfileImage = Url.Content("~/images/default_person.png");
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <img src="@(string.IsNullOrEmpty(Model.ProfileImagePath) ? defaultProfileImage : Url.Content(Model.ProfileImagePath))"
                                     alt="@Model.UserName"
                                     class="img-lg rounded-circle"
                                     onerror="this.onerror=null; this.src='@defaultProfileImage';" />
                                <h5 class="mt-3">@Model.UserName</h5>
                            </div>
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-4">Ad Soyad:</dt>
                                    <dd class="col-sm-8">@($"{Model.FirstName} {Model.LastName}".Trim())</dd>

                                    <dt class="col-sm-4">Email:</dt>
                                    <dd class="col-sm-8">@Model.Email</dd>

                                    <dt class="col-sm-4">Rollar:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.Roles.Any())
                                        {
                                            @string.Join(", ", Model.Roles)
                                        }
                                        else
                                        {
                                            <span>Təyin edilməyib</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <hr />
                        <a asp-action="Index" class="btn btn-outline-secondary">Siyahıya Qayıt</a>
                        <a asp-action="EditProfileImage" asp-route-userId="@Model.Id" class="btn btn-outline-primary">Profil Şəklini Dəyiş</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>