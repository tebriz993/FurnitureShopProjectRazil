@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Parolumu Unutdum";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                    <p class="text-center text-muted mb-4">Parolunuzu sıfırlamaq üçün qeydiyyatdan keçdiyiniz e-poçt ünvanınızı daxil edin.</p>

                    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="E-poçt ünvanınız">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Sıfırlama Linki Göndər</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-controller="Account" asp-action="Login">Daxil Olma Səhifəsinə Qayıt</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}