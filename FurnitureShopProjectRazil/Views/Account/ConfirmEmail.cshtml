@{
    ViewData["Title"] = "E-poçt Təsdiqi";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body p-4 text-center">
                    <h2 class="card-title mb-3">@ViewData["Title"]</h2>

                    @if (ViewBag.Message != null)
                    {
                        var message = ViewBag.Message.ToString();
                        var alertClass = message.Contains("uğurla") ? "alert-success" : "alert-danger";
                        <div class="alert @alertClass" role="alert">
                            @message
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            E-poçt təsdiqləmə statusunuz yoxlanılır...
                        </div>
                    }

                    @if (ViewBag.Message != null && ViewBag.Message.ToString().Contains("uğurla"))
                    {
                        <p class="mt-3">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Daxil Ol Səhifəsinə Keçin</a>
                        </p>
                    }
                    else
                    {
                        <p class="mt-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Ana Səhifəyə Qayıt</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>