@* CSS stilləri olduğu kimi qala bilər və ya sadələşdirilə bilər (loading/success ikonları artıq yoxdur) *@
<style>
    .product-item {
        position: relative;
        text-align: center;
        border: 1px solid #eee;
        padding: 15px;
        margin-bottom: 30px;
        transition: box-shadow .3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .product-item:hover {
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

    .product-img-link {
        display: block;
        margin-bottom: 15px;
    }

    .product-item .product-thumbnail {
        max-height: 200px;
        object-fit: contain;
        margin-left: auto;
        margin-right: auto;
        display: block;
        transition: transform .3s ease;
    }

    .product-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 5px;
        flex-grow: 1;
    }

        .product-title a {
            text-decoration: none;
            color: #2f2f2f;
        }

            .product-title a:hover {
                color: #007bff;
            }

    .product-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #388E3C;
        display: block;
        margin-bottom: 15px;
    }

    .add-to-cart-button {
        position: absolute;
        bottom: 15px;
        right: 15px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #28a745;
        color: white;
        border: none;
        font-size: 1.5rem;
        line-height: 1;
        text-align: center;
        cursor: pointer;
        transition: background-color .2s ease, transform .2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
    }

        .add-to-cart-button:hover {
            background-color: #218838;
            transform: scale(1.1);
        }

        .add-to-cart-button .plus-icon {
            font-weight: bold;
        }
</style>